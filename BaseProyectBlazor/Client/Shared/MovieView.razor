@*<h3>MovieView</h3>*@

<div>
    <p>Title:<b>@Movie.Title</b></p>
    <p>Premiere:<b>@Movie.Premiere.ToString("dd MMM yyyy")</b></p>
    @if (ShowButtons)
    {
        <div>
            <button @onclick="@(() => MovieRemove.InvokeAsync(Movie))"> Borrar </button>
        </div>
    }

</div>

@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool ShowButtons { get; set; } = false;
    [Parameter] public EventCallback<Movie> MovieRemove { get; set; }

    
}
